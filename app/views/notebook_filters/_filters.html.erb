<ul class="laptopType">
  <% @notebook_filters.each do |notebook_filter| %>
  <li>
    <div class="up"><%= notebook_filter.name %></div>
    <div class="middle">
      <div>CPU: <%= notebook_filter.cpu %> </div>
      <div>硬盘:<%= notebook_filter.harddisk %></div>
      <div>屏幕:<%= notebook_filter.screen %></div>
      <div>关键字: <%= notebook_filter.keyword %></div>
      <div>价格范围: <%= notebook_filter.price %></div>
    </div>
    <div class="down">
      <div>
        <button type="button" class="btn btn-info btn-xs">
          <span class="glyphicon glyphicon-edit"></span>
          <%= link_to '编辑', edit_notebook_filter_path(notebook_filter), :style => 'color:white' %>
        </button>
      </div>
      <div>
        <button type="button" class="btn btn-danger btn-xs">
          <span class="glyphicon glyphicon-remove"></span>
          <%= link_to '删除', notebook_filter_path(notebook_filter), :method => :delete,
            :confirm => '确定吗？', :style => 'color: white'%>
        </button>
      </div>
    </div>
  </li>
  <% end %>
  <li>
    <div class="add">
      <div>
        <button type="button" class="btn btn-default btn-lg">
          <span class="glyphicon glyphicon-plus"></span>
          <%= link_to '添加目标机型', new_notebook_filter_path %>
        </button>
      </div>
    </div>
  </li>
</ul>
